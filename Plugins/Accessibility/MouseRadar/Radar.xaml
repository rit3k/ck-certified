<Window x:Class="MouseRadar.Radar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        Height="{Binding Path=WindowSize}" Width="{Binding Path=WindowSize}"
        WindowStartupLocation="Manual"
        WindowStyle="None" 
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="AliceBlue" 
        Topmost="True" >
    
    <Canvas Margin="10, 10">
       
        <Ellipse Stroke="{Binding Path=CircleColor}" StrokeThickness="2" Width="{Binding Path=RadarSize}" Height="{Binding Path=RadarSize}">
        </Ellipse>
        <Polygon Points="14,0 29,10, 14,20" Stroke="Black" Fill="AliceBlue"  StrokeThickness="2" Canvas.Left="{Binding Path=PointerPositionX}" Canvas.Top="{Binding Path=PointerPositionY}">
            <Polygon.RenderTransform>
                <RotateTransform CenterX="{Binding Path=RotationOriginX}" CenterY="{Binding Path=RotationOriginY}" Angle="{Binding Path=Angle}" />
            </Polygon.RenderTransform>
        </Polygon>
       
    </Canvas>
</Window>
